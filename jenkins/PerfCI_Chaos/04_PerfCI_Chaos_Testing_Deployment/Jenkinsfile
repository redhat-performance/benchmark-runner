                          -v '${LOCAL_LOG_PATH}:${LOCAL_LOG_PATH}' \
                          -v '${KUBECONFIG_PATH}:${KUBECONFIG_PATH}' \
                          -v '${TEMP_DIR}:${DESTINATION_PATH}' \
                          --privileged '${QUAY_BENCHMARK_RUNNER_REPOSITORY}'
                      """
                 }
              }
            } // KrknHub: two-masters-node-failure-before-upgrade

        stage('Fedora Verifications - after two-masters-node-failure-before-upgrade') {
                steps {
                    script {
                            sh """
                                sudo podman run --rm -t \
