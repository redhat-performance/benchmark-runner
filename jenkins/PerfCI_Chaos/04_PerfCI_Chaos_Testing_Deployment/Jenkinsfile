        stage('Fedora Verifications - after worker-node-failure-before-upgrade') {
                steps {
                    script {
                            sh """
                                sudo podman run --rm -t \
                                -e WORKLOAD='bootstorm_vm' \
                                -e TEST_NAME='worker-node-failure-before-upgrade' \
                                -e KUBEADMIN_PASSWORD='${KUBEADMIN_PASSWORD}' \
